<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    android:id="@+id/main_layout"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:fontFamily="@font/poppins_medium"
        android:paddingTop="75dp"
        android:paddingRight="30dp"
        android:text=""
        android:textColor="@color/equal"
        android:textAlignment="textEnd"
        android:background="@drawable/shadow2"
        android:textSize="24sp"/>
    <TextView
        android:id="@+id/result"
        android:layout_below="@id/preview"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/shadow"
        android:fontFamily="@font/poppins_bold"
        android:paddingTop="0dp"
        android:lineHeight="50dp"
        android:paddingRight="30dp"
        android:text=""
        android:textAlignment="textEnd"
        android:textSize="56sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/backspace"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="330dp"
        android:background="@drawable/outline_backspace_24"
        android:fontFamily="@font/poppins_medium"
        android:textSize="30dp" />

    <LinearLayout
        android:id="@+id/row_1"
        android:layout_width="match_parent"
        android:layout_below="@id/result"
        android:layout_height="wrap_content"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingBottom="5dp"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/button"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/red"
            android:text="AC"
            android:textSize="30dp" />
        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/button"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/white"
            android:paddingTop="4dp"
            android:paddingRight="6dp"
            android:text="("
            android:textSize="30dp"
            />
        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/button"
            android:textColor="@color/white"
            android:paddingTop="4dp"
            android:paddingLeft="6dp"
            android:fontFamily="@font/poppins_medium"
            android:text=")"
            android:textSize="30dp"
            />
        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/button"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/white"
            android:text="รท"
            android:textSize="30dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row_2"
        android:layout_width="match_parent"
        android:layout_below="@id/row_1"
        android:layout_height="wrap_content"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="0dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn5"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/button"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@drawable/btn_color"
            android:text="7"
            android:textSize="30dp" />
        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn6"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:textColor="@drawable/btn_color"
            android:layout_marginTop="24dp"
            android:background="@drawable/button"
            android:fontFamily="@font/poppins_medium"
            android:text="8"
            android:textSize="30dp"
            />
        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn7"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/button"
            android:textColor="@drawable/btn_color"
            android:fontFamily="@font/poppins_medium"
            android:text="9"
            android:textSize="30dp"
            />
        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn8"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/button"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@drawable/btn_color"
            android:text="ร"
            android:textSize="30dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row_3"
        android:layout_width="match_parent"
        android:layout_below="@id/row_2"
        android:layout_height="wrap_content"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="0dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn9"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:textColor="@drawable/btn_color"
            android:layout_marginTop="24dp"
            android:background="@drawable/button"
            android:fontFamily="@font/poppins_medium"
            android:text="4"
            android:textSize="30dp" />
        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn10"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="24dp"
            android:textColor="@drawable/btn_color"
            android:background="@drawable/button"
            android:fontFamily="@font/poppins_medium"
            android:text="5"
            android:textSize="30dp"
            />
        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn11"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/button"
            android:fontFamily="@font/poppins_medium"
            android:text="6"
            android:textSize="30dp"
            android:textColor="@drawable/btn_color"
            />
        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn12"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/button"
            android:fontFamily="@font/poppins_medium"
            android:text="-"
            android:textColor="@drawable/btn_color"
            android:textSize="30dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row_4"
        android:layout_width="match_parent"
        android:layout_below="@id/row_3"
        android:layout_height="wrap_content"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="0dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn13"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/button"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@drawable/btn_color"
            android:text="1"
            android:textSize="30dp" />
        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn14"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/button"
            android:textColor="@drawable/btn_color"
            android:fontFamily="@font/poppins_medium"
            android:text="2"
            android:textSize="30dp"
            />
        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn15"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:textColor="@drawable/btn_color"
            android:layout_marginTop="24dp"
            android:background="@drawable/button"
            android:fontFamily="@font/poppins_medium"
            android:text="3"
            android:textSize="30dp"
            />
        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn16"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="24dp"
            android:textColor="@drawable/btn_color"
            android:background="@drawable/button"
            android:fontFamily="@font/poppins_medium"
            android:text="+"
            android:textSize="30dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row_5"
        android:layout_width="match_parent"
        android:layout_below="@id/row_4"
        android:layout_height="wrap_content"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="0dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn17"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="24dp"
            android:textColor="@drawable/btn_color"
            android:background="@drawable/button"
            android:fontFamily="@font/poppins_medium"
            android:text="+/-"
            android:textSize="30dp" />
        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn18"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/button"
            android:textColor="@drawable/btn_color"
            android:fontFamily="@font/poppins_medium"
            android:text="0"
            android:textSize="30dp"
            />
        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn19"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/button"
            android:textColor="@drawable/btn_color"
            android:fontFamily="@font/poppins_medium"
            android:text="."
            android:textSize="30dp"
            />
        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn20"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/equal_selector"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@drawable/btn_color"
            android:text="="
            android:textSize="30dp"
            />
    </LinearLayout>


</RelativeLayout>